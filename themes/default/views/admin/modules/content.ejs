</head>
<body>
<div id="container" class="clearfix">

    <%- include('../includes/left.ejs'); -%>

    <%- include('../includes/right.ejs'); -%>

    <div id="main" class="clearfix">

        <%- include('../includes/header-main.ejs'); -%>

        <div id="content" class="clearfix">

            <%- include('../includes/header-sec.ejs'); -%>

            <div class="window">
                <div class="actionbar">
                    <div class="pull-left">
                        <a href="javascript:void(0)" class="btn" data-toggle-sidebar="left">
                            <i class="fa fa-chevron-left"></i>
                        </a>
                        <a href="/<%- config.urls.admin %>/content" class="btn hidden-xs">
                            <%= __('Модуль создания страниц для веб-сайта') %>
                        </a>
                        <a href="https://CinemaPress.io/<%- config.language %>/admin/content.html" class="btn"
                           title="<%= __('Информация о параметрах модуля создания страниц для веб-сайта') %>"
                           target="_blank">
                            <i class="fa fa-info-circle text-muted"></i>
                        </a>
                    </div>
                    <div class="pull-right">
                        <% if (modules.content.status) { %>
                            <a href="javascript:void(0)" data-module="content" data-status="false"
                               class="btn btn-danger module-status power-off">
                                <i class="fa fa-power-off"></i>&nbsp;<%= __('Отключить') %>
                            </a>
                        <% } else { %>
                            <a href="javascript:void(0)" data-module="content" data-status="true"
                               class="btn btn-success module-status power-on">
                                <i class="fa fa-power-off"></i>&nbsp;<%= __('Активировать') %>
                            </a>
                        <% } %>
                        <a href="javascript:void(0)" class="btn" data-toggle-sidebar="right">
                            <i class="fa fa-chevron-right"></i>
                        </a>
                    </div>
                </div>

                <div class="inner-padding">

                    <% if (modules.content.status) { %>

                        <% if (content) { %>

                            <input name="content.id" value="<% if (content.id) { %><%- content.id %><% } %>"
                                   type="hidden">

                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="advanced-textarea">

                                        <div class="text-muted">
                                            <%= __('Название страницы:') %>
                                        </div>

                                        <div class="spacer-10"></div>

                                        <input type="text" class="form-control" name="content.content_title"
                                               value="<% if (content.content_title) { %><%= content.content_title %><% } %>"
                                               placeholder="<%= __('Например:') %> <%= __('Комедийные сериалы') %>">

                                        <div class="text-muted">
                                            <%= __('Описание страницы:') %>
                                        </div>

                                        <div class="spacer-10"></div>

                                        <textarea class="form-control descriptions" name="content.content_description"
                                                  placeholder="<%= __('Например:') %> <%= __('Подборка комедийных сериалов') %>"><% if (content.content_description) { %><%- content.content_description.trim().replace(/<br>/ig, '\n') %><% } %></textarea>

                                        <div class="advanced-textarea-footer">
                                            <div class="pull-left">
                                                <div class="text text-muted"><span
                                                            id="content.content_description">0</span> <%= __('символа(ов)') %>
                                                </div>
                                            </div>
                                            <div class="pull-right">
                                                <a href="javascript:void(0)" data-name="content.content_description"
                                                   data-code="&#13;&#10;<img src=&quot;URL.jpg&quot; style=&quot;float:left;width:250px;margin:20px 20px 20px 0;&quot;>&#13;&#10;"
                                                   class="btn btn-default codes">
                                                    <i class="fa fa-images"></i>
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="spacer-10"></div>

                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="cinema-box">
                                        <div class="cinema-box-header">
                                            <div class="cinema-label">
                                                <i class="fa fa-link"></i>&nbsp;&nbsp;&nbsp;<%= __('Уникальный ключ для URL') %>
                                            </div>
                                            <div class="cinema-label hidden-xs" style="float: right">
                                                <a href="https://CinemaPress.io/<%- config.language %>/admin/content.html" class="csstip" data-title="<%= __('Уникальный ключ для URl страницы') %>"
                                                   target="_blank">
                                                    <i class="fa fa-info-circle"></i>
                                                </a>
                                            </div>
                                        </div>
                                        <div class="inner-padding">
                                            <div class="row">
                                                <div class="col-lg-12 col-xs-12 text-center">
                                                    <div class="input-group">
                                                        <span class="input-group-addon text-muted"><span
                                                                    class="hidden-xs"><%- config.subdomain %><%- config.domain %>/<%- modules.content.data.url %>/</span><span
                                                                    class="visible-xs">/<%- modules.content.data.url %>/</span></span>
                                                        <input class="form-control input_url" name="content.content_url"
                                                               value="<% if (content.content_url) { %><%- content.content_url %><% } %>"
                                                               placeholder="<%= __('Уникальный ключ для URL') %>"
                                                               type="text">
                                                        <% if (modules.rss.status) { %>
                                                        <span class="input-group-addon text-warning"><a href="<%- config.protocol %><%- config.subdomain %><%- config.domain %>/rss.xml?collection=<% if (content.content_url) { %><%- encodeURIComponent(content.content_url) %><% } %>" id="rss_content_url" target="_blank"><i class="fas fa-rss text-warning"></i></a></span>
                                                        <% } %>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="spacer-10"></div>

                                <div class="col-sm-12">
                                    <div class="cinema-box">
                                        <div class="cinema-box-header">
                                            <div class="cinema-label">
                                                <i class="fa fa-image"></i>&nbsp;&nbsp;&nbsp;<%= __('Ссылка на изображение страницы') %>
                                            </div>
                                        </div>
                                        <div class="inner-padding">
                                            <div class="row">
                                                <div class="col-sm-10 text-center">
                                                    <input type="text" class="form-control" name="content.content_image"
                                                           data-content="input" value="<%= content.content_image %>"
                                                           placeholder="<%= __('URL изображения') %>"
                                                           style="font-weight: normal; font-size: 14px;">
                                                </div>
                                                <div class="col-sm-2 text-center">
                                                    <label class="btn btn-default btn-block" for="contentFile">
                                                        <span class="fa fa-plus"></span>
                                                    </label>
                                                </div>
                                                <form id="contentForm" enctype="multipart/form-data"
                                                      data-form="content">
                                                    <input type="file" name="content_image" id="contentFile"
                                                           data-renamed="">
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="spacer-10"></div>

                                <div class="col-sm-12">
                                    <div class="cinema-box">
                                        <div class="cinema-box-header">
                                            <div class="cinema-label">
                                                <i class="fas fa-tags"></i>&nbsp;&nbsp;&nbsp;<%= __('Теги через запятую') %>
                                            </div>
                                        </div>
                                        <div class="inner-padding">
                                            <div class="row">
                                                <div class="col-lg-12 col-xs-12 text-center">
                                                    <input type="text" name="content.content_tags"
                                                           <% if (content.content_tags) { %>value="<%= content.content_tags %>"
                                                            <% } %>
                                                           placeholder="<%= __('Например:') %> <%= __('Коллекции, Новости') %>"
                                                           pattern="^[A-Za-zА-Яа-яЁё0-9_ -]{1,30}$">
                                                    <script>
                                                      document.addEventListener('DOMContentLoaded', function() {
                                                        var content_tags = document
                                                            .querySelector('input[name="content.content_tags"]'),
                                                          tagify = new Tagify(content_tags, {
                                                            whitelist: ["<%- __('Коллекции') %>", "<%- __('Новости') %>", "<%- __('Страницы') %>", "<%- __('Обновления') %>", "<%- __('Фильмы') %>", "<%- __('Сериалы') %>", "<%- __('Мультфильмы') %>", "<%- __('ТВ') %>", "<%- __('Аниме') %>", 'NoComment', 'NoRandom', 'NoSorting', 'NoPagination', 'NoMore']
                                                          });
                                                        tagify.DOM.input.classList.add('form-control');
                                                      });
                                                    </script>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>

                            <div class="spacer-10"></div>

                            <div class="row">
                                <div class="col-sm-12">

                                    <div class="input-group">
                                        <input class="form-control" type="text"
                                               placeholder="<%= __('ID или ссылка на фильм') %>"
                                               data-add-id="content.content_movies">
                                        <span class="input-group-btn">
                                    <a href="javascript:void(0)" class="btn btn-default"
                                       data-add-name="content.content_movies">
                                        <span class="fa fa-plus"></span> <%= __('Добавить фильм') %>
                                    </a>
                                </span>
                                    </div>

                                    <div class="spacer-10"></div>

                                    <div class="advanced-textarea">

                                        <div class="thumbs-list thumbs-small">
                                            <ul data-add-name="content.content_movies">
                                                <% if (content.content_movies) { %>
                                                    <% content.content_movies.split(',').forEach(function (id) { %>
                                                        <li data-delete-id="<%- id %>" data-delete-name="content.content_movies" style="display:none">
                                                            <img class="media-object" src="/<%- config.urls.admin %>/poster?id=<%- id %>" alt="ID: <%- id %>" title="ID: <%- id %>">
                                                        </li>
                                                    <% }); %>
                                                <% } %>
                                            </ul>
                                            <script>
                                              var movies = document.querySelectorAll('.thumbs-list li');
                                              movies.forEach(function(m, i) {
                                                setTimeout(function() {
                                                  m.style.display = 'inline-block';
                                                }, i * 300);
                                              });
                                            </script>
                                        </div>

                                        <div style="display: none" id="content_ids">

                                            <div class="spacer-10"></div>

                                            <div class="text-muted">
                                                <%= __('Фильмы:') %>
                                            </div>

                                            <div class="spacer-10"></div>

                                            <textarea class="form-control input_ids" name="content.content_movies"
                                                      placeholder="<%= __('Список идентификаторов фильмов') %>"><% if (content.content_movies) { %><%- content.content_movies %><% } %></textarea>

                                            <div class="spacer-10"></div>

                                        </div>

                                        <div class="advanced-textarea-footer">
                                            <div class="pull-right">
                                                <a href="javascript:void(0)"
                                                   onclick="document.querySelector('#content_ids').style.display = 'block'"
                                                   class="btn btn-default">
                                                    <%= __('Редактировать список ID') %>
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        <% } else { %>

                            <div class="faq">
                                <article class="faq-group">
                                    <header>
                                        <i class="fa fa-minus"></i>
                                        <h3><%= __('Настройка страницы со списком новостей') %></h3>
                                    </header>
                                    <div class="faq-content clearfix">
                                        <div class="row">
                                            <div class="col-sm-12">
                                                <div class="cinema-box">
                                                    <div class="cinema-box-header">
                                                        <div class="cinema-label">
                                                            <i class="fa fa-link"></i>&nbsp;&nbsp;&nbsp;<%= __('URL путь') %>
                                                        </div>
                                                        <div class="cinema-label hidden-xs" style="float: right">
                                                            <a href="https://CinemaPress.io/<%- config.language %>/admin/content.html" class="csstip" data-title="<%= __('Параметр пути в URL') %>"
                                                               target="_blank">
                                                                <i class="fa fa-info-circle"></i>
                                                            </a>
                                                        </div>
                                                    </div>
                                                    <div class="inner-padding">
                                                        <div class="row">
                                                            <div class="col-lg-12 col-xs-12 text-center">
                                                                <div class="input-group">
                                                                    <span class="input-group-addon text-muted"><span
                                                                                class="hidden-xs"><%- config.subdomain %><%- config.domain %>/</span><span
                                                                                class="visible-xs">/</span></span>
                                                                    <input class="form-control input_url"
                                                                           name="modules.content.data.url"
                                                                           value="<%= modules.content.data.url %>"
                                                                           type="text">
                                                                    <span class="input-group-addon text-muted"><span
                                                                                class="hidden-xs">/avatar-5-will-be-released-in-2027</span><span
                                                                                class="visible-xs">/avatar-5</span></span>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="spacer-10"></div>

                                        <div class="row">
                                            <div class="col-sm-12">
                                                <div class="advanced-textarea">
                                                    <div class="text-muted">
                                                        <%= __('Веб-страница со списком контента') %> <a
                                                                href="<%- config.protocol + config.subdomain + config.domain + '/' + modules.content.data.url %>"
                                                                style="text-decoration:none;"><span
                                                                    class="fa fa-external-link-square-alt"></span></a> :
                                                    </div>

                                                    <div class="spacer-10"></div>

                                                    <input type="text" class="form-control"
                                                           name="modules.content.data.title"
                                                           value="<%= modules.content.data.title %>"
                                                           placeholder="<%= __('Например:') %> <%= __('Страницы веб-сайта') %>">

                                                    <textarea class="form-control descriptions"
                                                              name="modules.content.data.description"
                                                              placeholder="<%= __('Например:') %> <%= __('Новости и коллекции веб-сайта') %>"><%- modules.content.data.description %></textarea>

                                                    <div class="advanced-textarea-footer">
                                                        <div class="pull-left">
                                                            <div class="text text-muted"><span
                                                                        id="modules.content.data.description">0</span> <%= __('символа(ов)') %>
                                                            </div>
                                                        </div>
                                                        <div class="pull-right">
                                                            <a href="javascript:void(0)"
                                                               data-name="modules.content.data.description"
                                                               data-code="&#13;&#10;<img src=&quot;URL.jpg&quot; style=&quot;float:left;width:250px;margin:20px 20px 20px 0;&quot;>&#13;&#10;"
                                                               class="btn btn-default codes">
                                                                <i class="fa fa-images"></i>
                                                            </a>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </article>
                            </div>

                            <div class="spacer-10"></div>

                            <div class="faq">
                                <article class="faq-group">
                                    <header>
                                        <i class="fa fa-minus"></i>
                                        <h3><%= __('Блоки новостей на веб-сайте') %></h3>
                                    </header>
                                    <div class="faq-content clearfix">
                                        <div class="row">
                                            <div class="col-sm-12">
                                                <div class="cinema-box">
                                                    <div class="cinema-box-header">
                                                        <div class="cinema-label">
                                                            <i class="fa fa-bars"></i>&nbsp;&nbsp;&nbsp;<%= __('Блок новостей в боковой панели') %>
                                                        </div>
                                                        <div class="cinema-label hidden-xs" style="float: right">
                                                            <a href="https://CinemaPress.io/<%- config.language %>/admin/content.html" class="csstip"
                                                               data-title="<%= __('Блок постов в боковой панели на страницах веб-сайта') %>"
                                                               target="_blank">
                                                                <i class="fa fa-info-circle"></i>
                                                            </a>
                                                        </div>
                                                    </div>
                                                    <div class="inner-padding">
                                                        <div class="row">
                                                            <div class="col-sm-3">
                                                                <select name="modules.content.data.news.count"
                                                                        class="form-control without">
                                                                    <% for (var i = 0; i <= 20; i++) { %>
                                                                        <% if (modules.content.data.news.count === i) { %>
                                                                            <% if (i === 0) { %>
                                                                                <option value="<%= i %>"
                                                                                        selected="selected">
                                                                                    <%= __('Не показывать') %>
                                                                                </option>
                                                                            <% } else { %>
                                                                                <option value="<%= i %>"
                                                                                        selected="selected">
                                                                                    <%- i %> <%= __('пост(ов)') %>
                                                                                </option>
                                                                            <% } %>
                                                                        <% } else { %>
                                                                            <% if (i === 0) { %>
                                                                                <option value="<%= i %>">
                                                                                    <%= __('Не показывать') %>
                                                                                </option>
                                                                            <% } else { %>
                                                                                <option value="<%= i %>">
                                                                                    <%- i %> <%= __('пост(ов)') %>
                                                                                </option>
                                                                            <% } %>
                                                                        <% } %>
                                                                    <% } %>
                                                                </select>
                                                            </div>
                                                            <div class="col-sm-9">
                                                                <input type="text" name="modules.content.data.news.tags"
                                                                       value="<%= modules.content.data.news.tags %>"
                                                                       class="form-control"
                                                                       placeholder="<%= __('Теги через запятую') %>">
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="spacer-10"></div>

                                        <div class="row">
                                            <div class="col-sm-12">
                                                <div class="cinema-box">
                                                    <div class="cinema-box-header">
                                                        <div class="cinema-label">
                                                            <i class="fa fa-bars"></i>&nbsp;&nbsp;&nbsp;<%= __('Блок новостей на странице фильма') %>
                                                        </div>
                                                        <div class="cinema-label hidden-xs" style="float: right">
                                                            <a href="https://CinemaPress.io/<%- config.language %>/admin/content.html" class="csstip"
                                                               data-title="<%= __('Блок постов в которых указан фильм или последние новости с тегом на всех фильмах') %>"
                                                               target="_blank">
                                                                <i class="fa fa-info-circle"></i>
                                                            </a>
                                                        </div>
                                                    </div>
                                                    <div class="inner-padding">
                                                        <div class="row">
                                                            <div class="col-sm-3">
                                                                <select name="modules.content.data.movie.count"
                                                                        class="form-control without">
                                                                    <% for (var i = 0; i <= 20; i++) { %>
                                                                        <% if (modules.content.data.movie.count === i) { %>
                                                                            <% if (i === 0) { %>
                                                                                <option value="<%= i %>"
                                                                                        selected="selected">
                                                                                    <%= __('Не показывать') %>
                                                                                </option>
                                                                            <% } else { %>
                                                                                <option value="<%= i %>"
                                                                                        selected="selected">
                                                                                    <%- i %> <%= __('пост(ов)') %>
                                                                                </option>
                                                                            <% } %>
                                                                        <% } else { %>
                                                                            <% if (i === 0) { %>
                                                                                <option value="<%= i %>">
                                                                                    <%= __('Не показывать') %>
                                                                                </option>
                                                                            <% } else { %>
                                                                                <option value="<%= i %>">
                                                                                    <%- i %> <%= __('пост(ов)') %>
                                                                                </option>
                                                                            <% } %>
                                                                        <% } %>
                                                                    <% } %>
                                                                </select>
                                                            </div>
                                                            <div class="col-sm-4">
                                                                <label><%= __('упоминания или с тегом') %></label>
                                                            </div>
                                                            <div class="col-sm-5">
                                                                <input type="text"
                                                                       name="modules.content.data.movie.tags"
                                                                       value="<%= modules.content.data.movie.tags %>"
                                                                       class="form-control"
                                                                       placeholder="<%= __('Например:') %> <%= __('Оповещения, Новости') %>">
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="spacer-10"></div>

                                        <div class="row">
                                            <div class="col-sm-12">
                                                <div class="cinema-box">
                                                    <div class="cinema-box-header">
                                                        <div class="cinema-label">
                                                            <i class="fa fa-bars"></i>&nbsp;&nbsp;&nbsp;<%= __('Фильмы из новостей на главной') %>
                                                        </div>
                                                        <div class="cinema-label hidden-xs" style="float: right">
                                                            <a href="https://CinemaPress.io/<%- config.language %>/admin/content.html" class="csstip"
                                                               data-title="<%= __('Блок с фильмами из новостей на главной странице (перечислять URL-ключи через запятую)') %>"
                                                               target="_blank">
                                                                <i class="fa fa-info-circle"></i>
                                                            </a>
                                                        </div>
                                                    </div>
                                                    <div class="inner-padding">
                                                        <div class="row">
                                                            <div class="col-sm-2">
                                                                <select name="modules.content.data.index.order"
                                                                        class="form-control without">
                                                                    <% for (var i = 1; i <= 10; i++) { %>
                                                                        <% if (modules.content.data.index.order === i) { %>
                                                                            <option value="<%= i %>"
                                                                                    selected="selected">
                                                                                <%= __('%s-й', i) %>
                                                                            </option>
                                                                        <% } else { %>
                                                                            <option value="<%= i %>">
                                                                                <%= __('%s-й', i) %>
                                                                            </option>
                                                                        <% } %>
                                                                    <% } %>
                                                                </select>
                                                            </div>
                                                            <div class="col-sm-7">
                                                                <input type="text" name="modules.content.data.index.url"
                                                                       value="<%= modules.content.data.index.url %>"
                                                                       class="form-control"
                                                                       placeholder="<%= __('Например:') %> <%= __('vampire-movies') %>">
                                                            </div>
                                                            <div class="col-sm-3">
                                                                <select name="modules.content.data.index.count"
                                                                        class="form-control without">
                                                                    <% for (var i = 1; i <= 30; i++) { %>
                                                                        <% if (modules.content.data.index.count === i) { %>
                                                                            <option value="<%= i %>"
                                                                                    selected="selected">
                                                                                <%- i %> <%= __('фильма(ов)') %>
                                                                            </option>
                                                                        <% } else { %>
                                                                            <option value="<%= i %>">
                                                                                <%- i %> <%= __('фильма(ов)') %>
                                                                            </option>
                                                                        <% } %>
                                                                    <% } %>
                                                                </select>
                                                            </div>
                                                        </div>
