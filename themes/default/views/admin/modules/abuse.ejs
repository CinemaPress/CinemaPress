                                                                        <div class="col-lg-3 col-xs-3">
                                                                            <label><%= __('Email') %></label>
                                                                        </div>
                                                                        <div class="col-lg-9 col-xs-9 text-center">
                                                                            <input type="text"
                                                                                   name="modules.abuse.data.smtp.auth.user"
