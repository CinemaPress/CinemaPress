                                                                        <div class="spacer-10"></div>

                                                                        <div class="col-lg-3 col-xs-3">
                                                                            <label><%= __('Пароль') %></label>
                                                                        </div>
                                                                        <div class="col-lg-9 col-xs-9 text-center">
                                                                            <input type="text"
                                                                                   name="modules.abuse.data.smtp.auth.pass"
                                                                                   value="<%= modules.abuse.data.smtp.auth.pass %>"
                                                                                   class="form-control"
                                                                                   placeholder="<%= __('Ваш пароль от почтового ящика') %>">
                                                                        </div>
