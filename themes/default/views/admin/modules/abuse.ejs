                                                                <div class="cinema-box-header">
                                                                    <div class="cinema-label">
                                                                        <i class="fa fa-envelope"></i>&nbsp;&nbsp;&nbsp;<%= __('Параметры почтового сервера') %>
                                                                    </div>
                                                                    <div class="cinema-label hidden-xs"
                                                                         style="float: right">
                                                                        <a href="https://github.com/CinemaPress/CinemaPress/wiki/abuse"
                                                                           class="csstip"
                                                                           data-title="<%= __('Параметры почтового сервера') %>"
                                                                           target="_blank">
                                                                            <i class="fa fa-info-circle"></i>
                                                                        </a>
                                                                    </div>
                                                                </div>
