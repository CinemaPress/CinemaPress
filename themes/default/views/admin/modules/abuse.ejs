                                                           target="_blank">
                                                            <i class="fa fa-info-circle"></i>
                                                        </a>
                                                    </div>
                                                </div>
                                                <div class="inner-padding">
                                                    <div class="row">
                                                        <div class="col-sm-12">
                                                            <div class="cinema-box">
                                                                <div class="cinema-box-header">
                                                                    <div class="cinema-label">
                                                                        <i class="fa fa-envelope"></i>&nbsp;&nbsp;&nbsp;<%= __('Параметры авторизации SMTP') %>
                                                                    </div>
                                                                    <div class="cinema-label hidden-xs"
                                                                         style="float: right">
                                                                        <a href="https://github.com/CinemaPress/CinemaPress/wiki/abuse"
                                                                           class="csstip"
                                                                           data-title="<%= __('Параметры авторизации на почтовом SMTP сервере') %>"
