<head>

    <%- include('../includes/head.ejs'); -%>

</head>
<body>
<div id="container" class="clearfix">

    <%- include('../includes/left.ejs'); -%>

    <%- include('../includes/right.ejs'); -%>

    <div id="main" class="clearfix">

        <%- include('../includes/header-main.ejs'); -%>

        <div id="content" class="clearfix">

            <%- include('../includes/header-sec.ejs'); -%>

            <div class="window">
                <div class="actionbar">
                    <div class="pull-left">
                        <a href="javascript:void(0)" class="btn" data-toggle-sidebar="left">
                            <i class="fa fa-chevron-left"></i>
                        </a>
                        <a href="/<%- config.urls.admin %>/comments" class="btn hidden-xs">
                            <%= __('Модуль комментариев') %>
                        </a>
                        <a href="https://github.com/CinemaPress/CinemaPress/wiki/comments.html" class="btn"
                           title="<%= __('Информация о параметрах модуля добавления виджетов комментариев') %>"
                           target="_blank">
                            <i class="fa fa-info-circle text-muted"></i>
                        </a>
                    </div>
                    <div class="pull-right">
                        <% if (modules.comments.status) { %>
                            <a href="javascript:void(0)" data-module="comments" data-status="false"
                               class="btn btn-danger module-status power-off">
                                <i class="fa fa-power-off"></i>&nbsp;<%= __('Отключить') %>
                            </a>
                        <% } else { %>
                            <a href="javascript:void(0)" data-module="comments" data-status="true"
                               class="btn btn-success module-status power-on">
                                <i class="fa fa-power-off"></i>&nbsp;<%= __('Активировать') %>
                            </a>
                        <% } %>
                        <a href="javascript:void(0)" class="btn" data-toggle-sidebar="right">
                            <i class="fa fa-chevron-right"></i>
                        </a>
                    </div>
                </div>

                <div class="inner-padding">

                    <% if (modules.comments.status) { %>

                        <% if (comment) { %>

                            <input name="comment.id" value="<% if (comment.id) { %><%- comment.id %><% } %>"
                                   type="hidden">

                            <div class="row">
                                <div class="col-lg-12 col-xs-12 text-center">
                                    <div class="inline-labels">
                                        <label>
                                            <input name="comment.comment_confirm" value="1"
                                            <% if (comment.comment_confirm) { %> checked=""
                                                    <% } %>
                                                   type="radio"><span></span> <span><%= __('Показывать') %></span>
                                        </label>
                                        <label>
                                            <input name="comment.comment_confirm" value="0"
                                            <% if (!comment.comment_confirm) { %> checked=""
                                                    <% } %>
                                                   type="radio"><span></span> <span><%= __('Не показывать') %></span>
                                        </label>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="spacer-10"></div>
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <%= __('Название') %>
                                        </span>
                                        <input type="text" class="form-control" name="comment.comment_title"
                                               value="<%- comment.comment_title %>">
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="spacer-10"></div>
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <%= __('URL') %>
                                        </span>
                                        <input type="text" class="form-control" name="comment.comment_url"
                                               value="<%- comment.comment_url %>">
                                        <span class="input-group-addon">
                                            <a href="<%- comment.comment_url.replace(/(\/tv-version|\/mobile-version|\/m\.|\/tv\.|\/app\.)/i, '') %>#c<%- comment.comment_id %>"
                                               target="_blank">
                                                <span class="fa fa-external-link-square-alt"></span>
                                            </a>
                                        </span>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="spacer-10"></div>
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <%= __('Эмоция комментария') %>
                                        </span>
                                        <input type="text" class="form-control input_number" name="comment.comment_star"
                                               value="<%- comment.comment_star %>">
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="spacer-10"></div>
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <%= __('Имя пользователя') %>
                                        </span>
                                        <input type="text" class="form-control" name="comment.comment_anonymous"
                                               value="<%- comment.comment_anonymous %>">
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="spacer-10"></div>
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <%= __('Время комментария') %>
                                        </span>
                                        <% var dc = new Date(parseInt(comment.comment_publish) - 719528 * 1000 * 60 * 60 * 24) %>
                                        <% var comment_publish = dc.getFullYear() + "-" + (('0' + (dc.getMonth() + 1)).slice(-2)) + "-" + ('0' + dc.getDate()).slice(-2) + ' ' + ('0' + dc.getHours()).slice(-2) + ":" + ('0' + dc.getMinutes()).slice(-2) + ':00'; %>
                                        <input type="text" class="form-control" name="comment.comment_publish"
                                               value="<%- comment_publish %>">
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="spacer-10"></div>
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <%= __('HASH пользователя') %>
                                        </span>
                                        <% var comment_hash = comment.comment_avatar.split('/')[comment.comment_avatar.split('/').length - 1] %>
                                        <input type="text" class="form-control"
                                               value="<%- comment_hash.split('.')[0] %>">
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="spacer-10"></div>
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <%= __('Аватар') %>
                                        </span>
                                        <input type="text" class="form-control" name="comment.comment_avatar"
                                               value="<%- comment.comment_avatar %>">
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="spacer-10"></div>
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <%= __('IP пользователя') %>
                                        </span>
                                        <input type="text" class="form-control" name="comment.comment_ip"
                                               value="<%- comment.comment_ip %>">
                                        <span class="input-group-addon">
                                            <a href="https://ipapi.co/<%- comment.comment_ip %>" target="_blank">
                                                <span class="fas fa-user-secret"></span>
                                            </a>
                                        </span>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="spacer-10"></div>
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <%= __('ID комментария') %>
                                        </span>
                                        <input type="text" class="form-control" name="comment.comment_id"
                                               value="<%- comment.comment_id %>">
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="spacer-10"></div>
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <%= __('ID ответа') %>
                                        </span>
                                        <input type="text" class="form-control" name="comment.reply_id"
                                               value="<%- comment.reply_id %>">
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="spacer-10"></div>
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <%= __('ID фильма') %>
                                        </span>
                                        <input type="text" class="form-control input_number" name="comment.movie_id"
                                               value="<%- comment.movie_id %>">
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="spacer-10"></div>
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <%= __('ID контента') %>
                                        </span>
                                        <input type="text" class="form-control input_number" name="comment.content_id"
                                               value="<%- comment.content_id %>">
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="spacer-10"></div>
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <%= __('Сезон') %>
                                        </span>
                                        <input type="text" class="form-control input_number" name="comment.season_id"
                                               value="<%- comment.season_id %>">
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="spacer-10"></div>
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <%= __('Серия') %>
                                        </span>
                                        <input type="text" class="form-control input_number" name="comment.episode_id"
                                               value="<%- comment.episode_id %>">
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="spacer-10"></div>
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <%= __('Нравится') %>
                                        </span>
                                        <input type="text" class="form-control input_number" name="comment.comment_like"
                                               value="<%- comment.comment_like %>">
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="spacer-10"></div>
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <%= __('Не нравится') %>
                                        </span>
                                        <input type="text" class="form-control input_number"
                                               name="comment.comment_dislike" value="<%- comment.comment_dislike %>">
                                    </div>
                                </div>

                                <div class="spacer-10"></div>

                                <div class="col-sm-12">
                                    <div class="advanced-textarea">
                                        <div class="text-muted">
                                            <%= __('Текст комментария') %>
                                        </div>

                                        <div class="spacer-10"></div>

                                        <textarea class="form-control descriptions" name="comment.comment_text"><% if (comment.comment_text) { %><%- comment.comment_text.trim().replace(/\[br]/ig, '\n') %><% } %></textarea>
                                        <div class="advanced-textarea-footer">
                                            <div class="pull-left">
                                                <a href="javascript:void(0)" data-name="comment.comment_text"
                                                   data-bb-code2="b" class="btn btn-sm btn-default">
                                                    <%= '[b]' %>
                                                </a>
                                                <a href="javascript:void(0)" data-name="comment.comment_text"
                                                   data-bb-code2="i" class="btn btn-sm btn-default">
                                                    <%= '[i]' %>
                                                </a>
                                                <a href="javascript:void(0)" data-name="comment.comment_text"
                                                   data-bb-code2="spoiler" class="btn btn-sm btn-default">
                                                    <%= '[spoiler]' %>
                                                </a>
                                                <a href="javascript:void(0)" data-name="comment.comment_text"
                                                   data-bb-code2="search" class="btn btn-sm btn-default">
                                                    <%= '[search]' %>
                                                </a>
                                                <a href="javascript:void(0)" data-name="comment.comment_text"
                                                   data-bb-code2="url" class="btn btn-sm btn-default">
                                                    <%= '[url]' %>
                                                </a>
                                            </div>
                                        </div>
                                        <script>
                                          var bb_code2 = document.querySelectorAll("[data-bb-code2]");
                                          bb_code2.forEach(function(e) {
                                            e.addEventListener("click", function() {
                                              var text = document.querySelector('[name="comment.comment_text"]');
                                              if (this.dataset.bbCode2) {
                                                var t = text.selectionStart,
                                                  s = text.selectionEnd,
                                                  a = text.value.substring(t, s);
                                                text.value = text.value.substring(0, t) + ("[" + this.dataset.bbCode2 + "]") + a + ("[/" + this.dataset.bbCode2 + "]") + text.value.substring(s), text.focus(), text.selectionEnd = s + (2 * this.dataset.bbCode2.length + 5)
                                              }
                                            })
                                          });
                                        </script>

                                        <div class="spacer-10"></div>

                                        <div class="text-muted" id="comment-admin">
                                            <%= __('Ответ администратора') %>
                                        </div>

                                        <div class="spacer-10"></div>

                                        <textarea class="form-control descriptions" name="comment.comment_admin"><% if (comment.comment_admin) { %><%- comment.comment_admin.trim().replace(/\[br]/ig, '\n') %><% } %></textarea>
                                        <div class="advanced-textarea-footer">
                                            <div class="pull-left">
                                                <a href="javascript:void(0)" data-name="comment.comment_admin"
                                                   data-bb-code="b" class="btn btn-sm btn-default">
                                                    <%= '[b]' %>
                                                </a>
                                                <a href="javascript:void(0)" data-name="comment.comment_admin"
                                                   data-bb-code="i" class="btn btn-sm btn-default">
                                                    <%= '[i]' %>
                                                </a>
                                                <a href="javascript:void(0)" data-name="comment.comment_admin"
                                                   data-bb-code="spoiler" class="btn btn-sm btn-default">
                                                    <%= '[spoiler]' %>
                                                </a>
                                                <a href="javascript:void(0)" data-name="comment.comment_admin"
                                                   data-bb-code="search" class="btn btn-sm btn-default">
                                                    <%= '[search]' %>
                                                </a>
                                                <a href="javascript:void(0)" data-name="comment.comment_admin"
                                                   data-bb-code="url" class="btn btn-sm btn-default">
                                                    <%= '[url]' %>
                                                </a>
                                            </div>
                                        </div>
                                        <script>
                                          var bb_code = document.querySelectorAll("[data-bb-code]");
                                          bb_code.forEach(function(e) {
                                            e.addEventListener("click", function() {
                                              var e = document.querySelector('[name="comment.comment_admin"]');
                                              if (this.dataset.bbCode) {
                                                var t = e.selectionStart,
                                                  s = e.selectionEnd,
                                                  a = e.value.substring(t, s);
                                                e.value = e.value.substring(0, t) + ("[" + this.dataset.bbCode + "]") + a + ("[/" + this.dataset.bbCode + "]") + e.value.substring(s), e.focus(), e.selectionEnd = s + (2 * this.dataset.bbCode.length + 5)
                                              }
                                            })
                                          })
                                        </script>
                                    </div>
                                </div>

                                <div class="spacer-10"></div>

                                <div class="col-xs-3 col-md-3">
                                    <a href="javascript:void(0)" data-type="comment" data-id="<%- comment.comment_id %>"
                                       class="btn btn-danger btn-block del"><span class="fa fa-trash"></span></a>
                                </div>
                            </div>

                        <% } else { %>

                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="cinema-box">
                                        <div class="cinema-box-header">
                                            <div class="cinema-label">
                                                <i class="fa fa-comment-dots"></i>&nbsp;&nbsp;&nbsp;<%= __('Быстрые комментарии') %>
                                            </div>
                                            <div class="cinema-label hidden-xs" style="float: right">
                                                <a href="https://github.com/CinemaPress/CinemaPress/wiki/comments.html" class="csstip"
                                                   data-title="<%= __('Все комментарии будут храниться на Вашем сервере и каждый день отправляться в бэкап') %>"
                                                   target="_blank">
                                                    <i class="fa fa-info-circle"></i>
                                                </a>
                                            </div>
                                        </div>
                                        <div class="inner-padding">
                                            <div class="row">
                                                <div class="col-lg-12 col-xs-12 text-center">
                                                    <div class="inline-labels">
                                                        <label>
                                                            <input name="modules.comments.data.fast.active" value="1"
                                                            <% if (modules.comments.data.fast.active) { %> checked=""
                                                                    <% } %>
                                                                   type="radio"><span></span>
                                                            <span><%= __('Показывать') %></span>
                                                        </label>
                                                        <label>
                                                            <input name="modules.comments.data.fast.active" value="0"
                                                            <% if (!modules.comments.data.fast.active) { %> checked=""
                                                                    <% } %>
                                                                   type="radio"><span></span>
                                                            <span><%= __('Не показывать') %></span>
                                                        </label>
                                                    </div>
                                                </div>
                                                <div class="col-lg-12 col-xs-12">
                                                    <div class="faq">
                                                        <article class="faq-group">
                                                            <header class="text-muted text-left">
                                                                <i class="fa fa-plus"></i>
                                                                <h3><%= __('Настройка быстрых комментариев') %></h3>
                                                            </header>
                                                            <div class="faq-content clearfix">
                                                                <div class="row">
                                                                    <div class="col-lg-6 col-xs-6 text-center">
                                                                        <div>
                                                                            <a href="javascript:void(0)"
                                                                               class="csstip text-muted"
                                                                               data-title="<%= __('Модерация каждого комментария перед публикацией на веб-сайте') %>">
                                                                                <i class="fa fa-info-circle text-muted"></i>
                                                                                <%= __('Премодерация комментариев') %>
                                                                            </a>
                                                                        </div>
                                                                        <div>
                                                                            <label>
                                                                                <input name="modules.comments.data.fast.premoderate"
                                                                                       value="1"
                                                                                       <% if (modules.comments.data.fast.premoderate) { %>checked=""
                                                                                        <% } %>
                                                                                       type="radio"><span></span>
                                                                                <span><%= __('Да') %></span>
                                                                            </label>
                                                                            <label>
                                                                                <input name="modules.comments.data.fast.premoderate"
                                                                                       value="0"
                                                                                       <% if (!modules.comments.data.fast.premoderate) { %>checked=""
                                                                                        <% } %>
                                                                                       type="radio"><span></span>
                                                                                <span><%= __('Нет') %></span>
                                                                            </label>
                                                                        </div>
                                                                    </div>

                                                                    <div class="col-lg-6 col-xs-6 text-center">
                                                                        <div>
                                                                            <a href="javascript:void(0)"
                                                                               class="csstip text-muted"
                                                                               data-title="<%= __('Над формой ввода комментария, Вы можете указать, какую эмоцию или оценку Вы вкладываете в текст комментария') %>">
                                                                                <i class="fa fa-info-circle text-muted"></i>
                                                                                <%= __('Эмоция комментария') %>
                                                                            </a>
                                                                        </div>
                                                                        <div>
                                                                            <label>
                                                                                <input name="modules.comments.data.fast.star_rating"
                                                                                       value="1"
                                                                                       <% if (modules.comments.data.fast.star_rating) { %>checked=""
                                                                                        <% } %>
                                                                                       type="radio"><span></span>
                                                                                <span><%= __('Да') %></span>
                                                                            </label>
                                                                            <label>
                                                                                <input name="modules.comments.data.fast.star_rating"
                                                                                       value="0"
                                                                                       <% if (!modules.comments.data.fast.star_rating) { %>checked=""
                                                                                        <% } %>
                                                                                       type="radio"><span></span>
                                                                                <span><%= __('Нет') %></span>
                                                                            </label>
                                                                        </div>
                                                                    </div>

                                                                    <div class="spacer-10"></div>

                                                                    <div class="col-sm-12">
                                                                        <div>
                                                                            <a href="javascript:void(0)"
                                                                               class="csstip text-muted"
                                                                               data-title="<%= __('Сообщение для пользователя, после того как он оставил новый комментарий') %>">
                                                                                <i class="fa fa-info-circle text-muted"></i>
                                                                                <%= __('Сообщение для пользователя') %>
                                                                            </a>
                                                                        </div>
                                                                        <div>
                                                                            <textarea
                                                                                    name="modules.comments.data.fast.message"
                                                                                    class="form-control"><%- modules.comments.data.fast.message %></textarea>
                                                                        </div>
                                                                    </div>

                                                                    <div class="spacer-10"></div>

                                                                    <div class="col-sm-12">
                                                                        <div>
                                                                            <a href="javascript:void(0)"
                                                                               class="csstip text-muted"
                                                                               data-title="<%= __('Небольшой опрос, после того как пользователь оставил комментарий') %>">
                                                                                <i class="fa fa-info-circle text-muted"></i>
                                                                                <%= __('Опрос после комментария') %>
                                                                            </a>
                                                                        </div>
                                                                        <div>
                                                                            <textarea
                                                                                    name="modules.comments.data.fast.question"
                                                                                    class="form-control"><%- modules.comments.data.fast.question %></textarea>
                                                                        </div>
                                                                    </div>

                                                                    <div class="spacer-10"></div>

                                                                    <div class="col-sm-6">
                                                                        <div>
                                                                            <a href="javascript:void(0)"
                                                                               class="csstip text-muted"
                                                                               data-title="<%= __('Текст после того как пользователь ответил «Да»') %>">
                                                                                <i class="fa fa-info-circle text-muted"></i>
                                                                                <%= __('Ответ «Да»') %>
                                                                            </a>
                                                                        </div>
                                                                        <div>
                                                                            <textarea
                                                                                    name="modules.comments.data.fast.question_yes"
                                                                                    class="form-control"><%- modules.comments.data.fast.question_yes %></textarea>
                                                                        </div>
                                                                    </div>

                                                                    <div class="col-sm-6">
                                                                        <div>
                                                                            <a href="javascript:void(0)"
                                                                               class="csstip text-muted"
                                                                               data-title="<%= __('Текст после того как пользователь ответил «Нет»') %>">
                                                                                <i class="fa fa-info-circle text-muted"></i>
                                                                                <%= __('Ответ «Нет»') %>
                                                                            </a>
                                                                        </div>
                                                                        <div>
                                                                            <textarea
                                                                                    name="modules.comments.data.fast.question_not"
                                                                                    class="form-control"><%- modules.comments.data.fast.question_not %></textarea>
                                                                        </div>
                                                                    </div>

                                                                    <div class="spacer-10"></div>

                                                                    <div class="col-sm-6">
                                                                        <div>
                                                                            <a href="javascript:void(0)"
                                                                               class="csstip text-muted"
                                                                               data-title="<%= __('Защита от спама, введите секрет от Google reCAPTCHA v3') %>">
                                                                                <i class="fa fa-info-circle text-muted"></i>
                                                                                <%= __('Секрет reCAPTCHA v3') %>
                                                                            </a>
                                                                        </div>
                                                                        <div>
                                                                            <input name="modules.comments.data.fast.recaptcha_secret"
                                                                                   value="<%- modules.comments.data.fast.recaptcha_secret %>"
                                                                                   class="form-control" type="text">
                                                                        </div>
                                                                    </div>

                                                                    <div class="col-sm-6">
                                                                        <div>
