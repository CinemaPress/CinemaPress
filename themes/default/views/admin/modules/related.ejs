                                                       value="<%= modules.related.data.types.director.name %>"
                                                       class="form-control" type="text">
                                            </div>
                                            <div class="col-xs-6">
                                                <select name="modules.related.data.types.director.count"
                                                        class="form-control without">
                                                    <% for (var i = 1; i <= 20; i++) { %>
                                                        <% if (modules.related.data.types.director.count === i) { %>
                                                            <option value="<%= i %>" selected="selected">
                                                                <%- i %> <%= __('фильма(ов)') %>
                                                            </option>
                                                        <% } else { %>
                                                            <option value="<%= i %>">
                                                                <%- i %> <%= __('фильма(ов)') %>
                                                            </option>
                                                        <% } %>
                                                    <% } %>
                                                </select>
                                            </div>

                                            <div class="spacer-10"></div>

                                            <div class="col-xs-6">
                                                <div class="inline-labels">
                                                    <label>
                                                        <input name="modules.related.data.display" value="directors"
                                                               type="checkbox"
                                                        <% if (modules.related.data.display.indexOf('directors') + 1) { %>
                                                               checked=""
                                                                <% } %>
                                                               data-name="director"><span></span> <%= __('всех') %>
                                                    </label>
