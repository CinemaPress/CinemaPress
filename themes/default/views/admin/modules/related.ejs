                                                            </option>
                                                        <% } else { %>
                                                            <option value="<%= name %>">
                                                                <%- config.sorting[name] %>
                                                            </option>
                                                        <% } %>
                                                    <% } %>
                                                </select>
                                            </div>
                                        </div>
