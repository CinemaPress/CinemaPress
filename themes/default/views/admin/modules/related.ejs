                                                            <option value="<%= i %>" selected="selected">
                                                                <%- i %> <%= __('фильма(ов)') %>
                                                            </option>
                                                        <% } else { %>
                                                            <option value="<%= i %>">
                                                                <%- i %> <%= __('фильма(ов)') %>
                                                            </option>
                                                        <% } %>
                                                    <% } %>
                                                </select>
                                            </div>

                                            <div class="spacer-10"></div>

                                            <div class="col-xs-6">
                                                <div class="inline-labels">
                                                    <label>
