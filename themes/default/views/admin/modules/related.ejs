                                                               data-name="actor"><span></span> <%= __('всех') %>
                                                    </label>
                                                    <label>
                                                        <input name="modules.related.data.display" value="actor"
                                                               type="checkbox"
                                                        <% if (modules.related.data.display.indexOf('actor') + 1) { %>
                                                               checked=""
                                                                <% } %>
                                                               data-name="actor"><span></span> <%= __('одного актера') %>
                                                    </label>
                                                </div>
                                            </div>
                                            <div class="col-xs-6">
                                                <select name="modules.related.data.types.actor.sorting"
                                                        class="form-control without">
                                                    <% for (name in config.sorting) { if (!config.sorting.hasOwnProperty(name) || !config.sorting[name]) continue; %>
                                                        <% if (modules.related.data.types.actor.sorting === name) { %>
                                                            <option value="<%= name %>" selected="selected">
