<head>

    <%- include('../includes/head.ejs'); -%>

</head>
<body>
<div id="container" class="clearfix">

    <%- include('../includes/left.ejs'); -%>

    <%- include('../includes/right.ejs'); -%>

    <div id="main" class="clearfix">

        <%- include('../includes/header-main.ejs'); -%>

        <div id="content" class="clearfix">

            <%- include('../includes/header-sec.ejs'); -%>

            <div class="window">
                <div class="actionbar">
                    <div class="pull-left">
                        <a href="javascript:void(0)" class="btn" data-toggle-sidebar="left">
                            <i class="fa fa-chevron-left"></i>
                        </a>
                        <a href="/<%- config.urls.admin %>/schema" class="btn hidden-xs">
                            <%= __('Модуль микроразметки') %>
                        </a>
                        <a href="https://github.com/CinemaPress/CinemaPress/wiki/schema" class="btn"
                           title="<%= __('Информация о параметрах модуля Schema и OpenGraph разметки') %>"
                           target="_blank">
                            <i class="fa fa-info-circle text-muted"></i>
                        </a>
                    </div>
                    <div class="pull-right">
                        <% if (modules.schema.status) { %>
                            <a href="javascript:void(0)" data-module="schema" data-status="false"
                               class="btn btn-danger module-status power-off">
                                <i class="fa fa-power-off"></i>&nbsp;<%= __('Отключить') %>
                            </a>
                        <% } else { %>
                            <a href="javascript:void(0)" data-module="schema" data-status="true"
                               class="btn btn-success module-status power-on">
                                <i class="fa fa-power-off"></i>&nbsp;<%= __('Активировать') %>
                            </a>
                        <% } %>
                        <a href="javascript:void(0)" class="btn" data-toggle-sidebar="right">
                            <i class="fa fa-chevron-right"></i>
                        </a>
                    </div>
                </div>

                <div class="inner-padding">

                    <% if (modules.schema.status) { %>

                    <div class="row">
                        <div class="col-sm-12">

                            <div class="faq">
                                <article class="faq-group">
                                    <header class="text-muted">
                                        <i class="fa fa-minus"></i>
                                        <h3><i class="fas fa-align-left"></i>&nbsp;&nbsp;&nbsp;FAQPage</h3>
                                    </header>
                                    <div class="faq-content clearfix">
                                        <div class="row">
                                            <div class="col-sm-12">
                                                <div class="cinema-box">
                                                    <div class="cinema-box-header">
                                                        <div class="cinema-label">
                                                            <i class="fas fa-stream"></i>&nbsp;&nbsp;&nbsp;FAQPage
                                                        </div>
                                                        <div class="cinema-label hidden-xs" style="float: right">
                                                            <a href="https://github.com/CinemaPress/CinemaPress/wiki/schema" class="csstip" data-title="<%= __('Schema разметка «FAQPage», которая показывает в результатах поиска список часто задаваемых вопросов') %>"
                                                               target="_blank">
                                                                <i class="fa fa-info-circle"></i>
                                                            </a>
                                                        </div>
                                                    </div>
                                                    <div class="inner-padding">
                                                        <div class="row">
                                                            <div class="col-lg-12 col-xs-12 text-center">
                                                                <input class="form-control" type="text" placeholder="FAQ" name="modules.schema.data.faq.title" autocomplete="off" autocapitalize="off" spellcheck="false" value="<%- modules.schema.data.faq.title %>">
                                                            </div>
                                                        </div>

                                                        <div class="spacer-10"></div>

                                                        <div class="row">
                                                            <div class="col-sm-12">
                                                                <div class="cinema-box">
                                                                    <div class="cinema-box-header">
                                                                        <div class="cinema-label">
                                                                            <i class="far fa-list-alt"></i>&nbsp;&nbsp;&nbsp;<%= __('Разметка на главной странице') %>
                                                                        </div>
                                                                    </div>
                                                                    <div class="inner-padding">
                                                                        <div class="row">
                                                                            <div class="col-lg-12 col-xs-12 text-center">
                                                                                <input class="form-control" type="text" placeholder="<%= __('Вопрос') %> №1" name="modules.schema.data.faq.index.question1" autocomplete="off" autocapitalize="off" spellcheck="false" value="<%- modules.schema.data.faq.index.question1 %>">

                                                                                <div class="spacer-10"></div>

                                                                                <textarea class="form-control" name="modules.schema.data.faq.index.answer1" placeholder="<%= __('Ответ') %> №1"><%- modules.schema.data.faq.index.answer1 %></textarea>

                                                                                <div class="spacer-5"></div>
                                                                                <hr>
                                                                                <div class="spacer-5"></div>

                                                                                <input class="form-control" type="text" placeholder="<%= __('Вопрос') %> №2" name="modules.schema.data.faq.index.question2" autocomplete="off" autocapitalize="off" spellcheck="false" value="<%- modules.schema.data.faq.index.question2 %>">

                                                                                <div class="spacer-10"></div>

                                                                                <textarea class="form-control" name="modules.schema.data.faq.index.answer2" placeholder="<%= __('Ответ') %> №1"><%- modules.schema.data.faq.index.answer2 %></textarea>

                                                                                <div class="spacer-5"></div>
                                                                                <hr>
                                                                                <div class="spacer-5"></div>

                                                                                <input class="form-control" type="text" placeholder="<%= __('Вопрос') %> №3" name="modules.schema.data.faq.index.question3" autocomplete="off" autocapitalize="off" spellcheck="false" value="<%- modules.schema.data.faq.index.question3 %>">

                                                                                <div class="spacer-10"></div>

                                                                                <textarea class="form-control" name="modules.schema.data.faq.index.answer3" placeholder="<%= __('Ответ') %> №3"><%- modules.schema.data.faq.index.answer3 %></textarea>

                                                                                <div class="spacer-5"></div>
                                                                                <hr>
                                                                                <div class="spacer-5"></div>

                                                                                <input class="form-control" type="text" placeholder="<%= __('Вопрос') %> №4" name="modules.schema.data.faq.index.question4" autocomplete="off" autocapitalize="off" spellcheck="false" value="<%- modules.schema.data.faq.index.question4 %>">

                                                                                <div class="spacer-10"></div>

                                                                                <textarea class="form-control" name="modules.schema.data.faq.index.answer4" placeholder="<%= __('Ответ') %> №4"><%- modules.schema.data.faq.index.answer4 %></textarea>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                </div>

                                                                <div class="spacer-10"></div>

                                                                <div class="cinema-box">
                                                                    <div class="cinema-box-header">
                                                                        <div class="cinema-label">
                                                                            <i class="far fa-list-alt"></i>&nbsp;&nbsp;&nbsp;<%= __('Разметка на странице категории') %>
                                                                        </div>
                                                                    </div>
                                                                    <div class="inner-padding">
                                                                        <div class="row">
                                                                            <div class="col-lg-12 col-xs-12 text-center">
                                                                                <input class="form-control" type="text" placeholder="<%= __('Вопрос') %> №1" name="modules.schema.data.faq.category.question1" autocomplete="off" autocapitalize="off" spellcheck="false" value="<%- modules.schema.data.faq.category.question1 %>">

                                                                                <div class="spacer-10"></div>

                                                                                <textarea class="form-control" name="modules.schema.data.faq.category.answer1" placeholder="<%= __('Ответ') %> №1"><%- modules.schema.data.faq.category.answer1 %></textarea>

                                                                                <div class="spacer-5"></div>
                                                                                <hr>
                                                                                <div class="spacer-5"></div>

                                                                                <input class="form-control" type="text" placeholder="<%= __('Вопрос') %> №2" name="modules.schema.data.faq.category.question2" autocomplete="off" autocapitalize="off" spellcheck="false" value="<%- modules.schema.data.faq.category.question2 %>">

                                                                                <div class="spacer-10"></div>

                                                                                <textarea class="form-control" name="modules.schema.data.faq.category.answer2" placeholder="<%= __('Ответ') %> №1"><%- modules.schema.data.faq.category.answer2 %></textarea>

                                                                                <div class="spacer-5"></div>
                                                                                <hr>
                                                                                <div class="spacer-5"></div>

                                                                                <input class="form-control" type="text" placeholder="<%= __('Вопрос') %> №3" name="modules.schema.data.faq.category.question3" autocomplete="off" autocapitalize="off" spellcheck="false" value="<%- modules.schema.data.faq.category.question3 %>">

                                                                                <div class="spacer-10"></div>

                                                                                <textarea class="form-control" name="modules.schema.data.faq.category.answer3" placeholder="<%= __('Ответ') %> №3"><%- modules.schema.data.faq.category.answer3 %></textarea>

                                                                                <div class="spacer-5"></div>
                                                                                <hr>
                                                                                <div class="spacer-5"></div>

                                                                                <input class="form-control" type="text" placeholder="<%= __('Вопрос') %> №4" name="modules.schema.data.faq.category.question4" autocomplete="off" autocapitalize="off" spellcheck="false" value="<%- modules.schema.data.faq.category.question4 %>">

                                                                                <div class="spacer-10"></div>

                                                                                <textarea class="form-control" name="modules.schema.data.faq.category.answer4" placeholder="<%= __('Ответ') %> №4"><%- modules.schema.data.faq.category.answer4 %></textarea>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                </div>

                                                                <div class="spacer-10"></div>

                                                                <div class="cinema-box">
                                                                    <div class="cinema-box-header">
                                                                        <div class="cinema-label">
                                                                            <i class="far fa-list-alt"></i>&nbsp;&nbsp;&nbsp;<%= __('Разметка на странице фильма') %>
                                                                        </div>
                                                                    </div>
                                                                    <div class="inner-padding">
                                                                        <div class="row">
                                                                            <div class="col-lg-12 col-xs-12 text-center">
                                                                                <input class="form-control" type="text" placeholder="<%= __('Вопрос') %> №1" name="modules.schema.data.faq.movie.question1" autocomplete="off" autocapitalize="off" spellcheck="false" value="<%- modules.schema.data.faq.movie.question1 %>">

                                                                                <div class="spacer-10"></div>

                                                                                <textarea class="form-control" name="modules.schema.data.faq.movie.answer1" placeholder="<%= __('Ответ') %> №1"><%- modules.schema.data.faq.movie.answer1 %></textarea>

                                                                                <div class="spacer-5"></div>
                                                                                <hr>
                                                                                <div class="spacer-5"></div>

                                                                                <input class="form-control" type="text" placeholder="<%= __('Вопрос') %> №2" name="modules.schema.data.faq.movie.question2" autocomplete="off" autocapitalize="off" spellcheck="false" value="<%- modules.schema.data.faq.movie.question2 %>">

                                                                                <div class="spacer-10"></div>

                                                                                <textarea class="form-control" name="modules.schema.data.faq.movie.answer2" placeholder="<%= __('Ответ') %> №1"><%- modules.schema.data.faq.movie.answer2 %></textarea>

                                                                                <div class="spacer-5"></div>
                                                                                <hr>
                                                                                <div class="spacer-5"></div>

                                                                                <input class="form-control" type="text" placeholder="<%= __('Вопрос') %> №3" name="modules.schema.data.faq.movie.question3" autocomplete="off" autocapitalize="off" spellcheck="false" value="<%- modules.schema.data.faq.movie.question3 %>">

                                                                                <div class="spacer-10"></div>

                                                                                <textarea class="form-control" name="modules.schema.data.faq.movie.answer3" placeholder="<%= __('Ответ') %> №3"><%- modules.schema.data.faq.movie.answer3 %></textarea>

                                                                                <div class="spacer-5"></div>
                                                                                <hr>
                                                                                <div class="spacer-5"></div>

                                                                                <input class="form-control" type="text" placeholder="<%= __('Вопрос') %> №4" name="modules.schema.data.faq.movie.question4" autocomplete="off" autocapitalize="off" spellcheck="false" value="<%- modules.schema.data.faq.movie.question4 %>">

                                                                                <div class="spacer-10"></div>

                                                                                <textarea class="form-control" name="modules.schema.data.faq.movie.answer4" placeholder="<%= __('Ответ') %> №4"><%- modules.schema.data.faq.movie.answer4 %></textarea>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </article>
                            </div>

                        </div>
                    </div>

                    <% } else { %>

                        <div class="row">
                            <div class="col-xs-12">
                                <div class="attention-box attention-danger">
                                    <h4><%= __('Модуль') %> «<%- title %>» <%= __('отключен') %></h4>
                                    <div class="spacer-20"></div>
                                    <p class="text-muted">
                                        <%= __('Модуль позволяет добавить Schema и OpenGraph разметку на все страницы веб-сайта.') %>
                                        <br>
                                        <%= __('Чтобы включить модуль, нажмите на кнопку «Активировать» вверху экрана.') %>
                                    </p>
                                </div>
                            </div>
                        </div>

                    <% } %>

                </div>
            </div>

            <%- include('../includes/footer.ejs'); -%>

        </div>
    </div>
</div>

</body>
</html>