                                                    <% if (config.index.type.sorting === name) { %>
                                                        <option value="<%= name %>" selected="selected">
                                                            <%- config.sorting[name] %>
                                                        </option>
                                                    <% } else { %>
                                                        <option value="<%= name %>">
                                                            <%- config.sorting[name] %>
                                                        </option>
                                                    <% } %>
                                                <% } %>
                                            </select>
                                        </div>

                                        <div class="spacer-10"></div>

                                        <div class="col-sm-3">
                                            <select name="config.index.type.count" class="form-control without">
                                                <% for (var i = 1; i <= 30; i++) { %>
                                                    <% if (config.index.type.count === i) { %>
                                                        <option value="<%= i %>" selected="selected">
                                                            <%- i %> <%= __('фильма(ов)') %>
                                                        </option>
                                                    <% } else { %>
                                                        <option value="<%= i %>">
                                                            <%- i %> <%= __('фильма(ов)') %>
                                                        </option>
                                                    <% } %>
                                                <% } %>
                                            </select>
                                        </div>
                                        <div class="col-sm-3">
                                            <label><%= __('из типа(ов)') %></label>
                                        </div>
                                        <div class="col-sm-6">
                                            <input type="text" name="config.index.type.keys"
                                                   value="<%= config.index.type.keys %>" class="form-control"
                                                   placeholder="<%- config.urls.types.movie %>,<%- config.urls.types.serial %>,<%- config.urls.types.mult %>,<%- config.urls.types.anime %>,<%- config.urls.types.tv %>">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="spacer-10"></div>

                        <div class="col-sm-12">
                            <div class="cinema-box">
                                <div class="cinema-box-header">
                                    <div class="cinema-label">
                                        <i class="fa fa-bars"></i>&nbsp;&nbsp;&nbsp;<%- config.index.year.order %>.
                                        <% if (config.index.year.keys) { %><%= __('Годы:') %> <%- config.index.year.keys %>
                                        <% } else { %><%= __('Блок с годами пустой') %>
                                        <% } %>
                                    </div>
                                    <div class="cinema-label hidden-xs" style="float: right">
                                        <a href="https://CinemaPress.io/<%- config.language %>/admin/homepage.html" class="csstip"
                                           data-title="<%= __('Блок на главной странице веб-сайта в котором фильмы из определеных годов') %>"
                                           target="_blank">
                                            <i class="fa fa-info-circle"></i>
                                        </a>
                                    </div>
                                </div>
                                <div class="inner-padding" <% if (!config.index.year.keys) { %>style="opacity:.5;"
                                        <% } %>
                                >
                                    <div class="row">
                                        <div class="col-sm-2">
                                            <select name="config.index.year.order" class="form-control without">
                                                <% for (var i = 1; i <= 10; i++) { %>
                                                    <% if (config.index.year.order === i) { %>
                                                        <option value="<%= i %>" selected="selected">
                                                            <%= __('%s-й', i) %>
                                                        </option>
                                                    <% } else { %>
                                                        <option value="<%= i %>">
                                                            <%= __('%s-й', i) %>
                                                        </option>
                                                    <% } %>
                                                <% } %>
                                            </select>
                                        </div>
                                        <div class="col-sm-6">
                                            <input type="text" name="config.index.year.name"
                                                   value="<%= config.index.year.name %>" class="form-control without">
