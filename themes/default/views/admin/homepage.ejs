                                            <select name="config.index.year.sorting" class="form-control without">
                                                <% for (name in config.sorting) { %>
                                                    <% if (config.index.year.sorting === name) { %>
                                                        <option value="<%= name %>" selected="selected">
                                                            <%- config.sorting[name] %>
                                                        </option>
                                                    <% } else { %>
                                                        <option value="<%= name %>">
                                                            <%- config.sorting[name] %>
                                                        </option>
                                                    <% } %>
                                                <% } %>
                                            </select>
                                        </div>

                                        <div class="spacer-10"></div>

                                        <div class="col-sm-3">
                                            <select name="config.index.year.count" class="form-control without">
                                                <% for (var i = 1; i <= 30; i++) { %>
                                                    <% if (config.index.year.count === i) { %>
