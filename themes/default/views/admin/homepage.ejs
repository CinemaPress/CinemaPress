                                           data-title="<%= __('Блок на главной странице веб-сайта в котором фильмы из определенных типов:') %> <%- config.urls.types.movie %>, <%- config.urls.types.serial %>, <%- config.urls.types.mult %>, <%- config.urls.types.anime %> <%= __('или') %> <%- config.urls.types.tv %>."
                                           target="_blank">
                                            <i class="fa fa-info-circle"></i>
                                        </a>
                                    </div>
                                </div>
                                <div class="inner-padding" <% if (!config.index.type.keys) { %>style="opacity:.5;"
                                        <% } %>
                                >
                                    <div class="row">
                                        <div class="col-sm-2">
                                            <select name="config.index.type.order" class="form-control without">
                                                <% for (var i = 1; i <= 10; i++) { %>
                                                    <% if (config.index.type.order === i) { %>
                                                        <option value="<%= i %>" selected="selected">
                                                            <%= __('%s-й', i) %>
                                                        </option>
                                                    <% } else { %>
                                                        <option value="<%= i %>">
                                                            <%= __('%s-й', i) %>
                                                        </option>
                                                    <% } %>
                                                <% } %>
                                            </select>
