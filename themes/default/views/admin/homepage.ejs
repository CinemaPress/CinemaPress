<div id="container" class="clearfix">

    <%- include('includes/left.ejs'); -%>

    <%- include('includes/right.ejs'); -%>

    <div id="main" class="clearfix">

        <%- include('includes/header-main.ejs'); -%>

        <div id="content" class="clearfix">

            <%- include('includes/header-sec.ejs'); -%>

            <div class="window">
                <div class="actionbar">
                    <div class="pull-left">
                        <a href="javascript:void(0)" class="btn" data-toggle-sidebar="left">
                            <i class="fa fa-chevron-left"></i>
                        </a>
                        <a href="/<%- config.urls.admin %>/homepage" class="btn">
                            <%= __('Главная страница веб-сайта') %>
                        </a>
                        <a href="https://CinemaPress.io/<%- config.language %>/admin/homepage.html" class="btn"
                           title="<%= __('Информация о параметрах для главной страницы веб-сайта') %>" target="_blank">
                            <i class="fa fa-info-circle text-muted"></i>
                        </a>
                    </div>
                    <div class="pull-right">
                        <a href="javascript:void(0)" class="btn" data-toggle-sidebar="right">
                            <i class="fa fa-chevron-right"></i>
                        </a>
                    </div>
                </div>

                <div class="inner-padding">

                    <div class="row">

                        <div class="col-sm-12">
                            <div class="cinema-box">
                                <div class="cinema-box-header">
                                    <div class="cinema-label"><i
                                                class="fa fa-heading"></i>&nbsp;&nbsp;&nbsp;<%= __('Заголовок, описание и H1 веб-страницы') %>
                                    </div>
                                    <div class="cinema-label hidden-xs" style="float: right">
                                        <a href="https://CinemaPress.io/<%- config.language %>/admin/homepage.html" class="csstip"
                                           data-title="<%= __('Написание текста для заголовка, описания и H1 на главной странице веб-сайта') %>"
                                           target="_blank">
                                            <i class="fa fa-info-circle"></i>
                                        </a>
                                    </div>
                                </div>
                                <div class="inner-padding">
                                    <% if (config.titles) { %>
                                        <div class="faq">
                                            <article class="faq-group">
                                                <header>
                                                    <i class="fa fa-minus"></i>
                                                    <h3><%= __('Заголовок веб-страницы') %></h3>
                                                </header>
                                                <div class="faq-content clearfix">
                                                    <div class="row">
                                                        <div class="col-sm-12">
                                                            <div class="advanced-textarea">
                                                                <div class="text-muted">
                                                                    <%= __('Главная веб-страница') %> <a
                                                                            href="<%- config.protocol %><%- config.subdomain %><%- config.domain %>"
                                                                            style="text-decoration:none;"
                                                                            target="_blank"><span
                                                                                class="fa fa-external-link-square-alt"></span></a>:
                                                                </div>

                                                                <div class="spacer-10"></div>

                                                                <textarea class="form-control titles"
                                                                          name="config.titles.index"><%- config.titles.index %></textarea>
                                                                <div class="advanced-textarea-footer">
                                                                    <div class="pull-left">
                                                                        <div class="text text-muted"><span
                                                                                    id="config.titles.index">0</span> <%= __('символа(ов)') %>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </article>
                                            <article class="faq-group">
                                                <header>
                                                    <i class="fa fa-minus"></i>
                                                    <h3><%= __('H1 на веб-странице') %></h3>
                                                </header>
                                                <div class="faq-content clearfix">
                                                    <div class="row">
                                                        <div class="col-sm-12">
                                                            <div class="advanced-textarea">
                                                                <div class="text-muted">
                                                                    <%= __('Главная веб-страница') %> <a
                                                                            href="<%- config.protocol %><%- config.subdomain %><%- config.domain %>"
                                                                            style="text-decoration:none;"
                                                                            target="_blank"><span
                                                                                class="fa fa-external-link-square-alt"></span></a>:
                                                                </div>

                                                                <div class="spacer-10"></div>

                                                                <textarea class="form-control titles"
                                                                          name="config.h1.index"><%- config.h1.index %></textarea>
                                                                <div class="advanced-textarea-footer">
                                                                    <div class="pull-left">
                                                                        <div class="text text-muted"><span
                                                                                    id="config.h1.index">0</span> <%= __('символа(ов)') %>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </article>
                                            <article class="faq-group">
                                                <header>
                                                    <i class="fa fa-minus"></i>
                                                    <h3><%= __('Описание веб-страницы') %></h3>
                                                </header>
