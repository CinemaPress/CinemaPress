                                        <% } %>
                                    </div>
                                    <div class="cinema-label hidden-xs" style="float: right">
                                        <a href="https://CinemaPress.io/<%- config.language %>/admin/homepage.html" class="csstip"
                                           data-title="<%= __('Блок на главной странице веб-сайта в котором фильмы с определенными идентификатором') %>"
                                           target="_blank">
                                            <i class="fa fa-info-circle"></i>
                                        </a>
                                    </div>
                                </div>
                                <div class="inner-padding"
                                     <% if (!config.index.ids.keys || !config.index.ids.count) { %>style="opacity:.5;"
                                        <% } %>
                                >
                                    <div class="row">
                                        <div class="col-sm-2">
                                            <select name="config.index.ids.order" class="form-control without">
                                                <% for (var i = 1; i <= 10; i++) { %>
                                                    <% if (config.index.ids.order === i) { %>
                                                        <option value="<%= i %>" selected="selected">
                                                            <%= __('%s-й', i) %>
                                                        </option>
                                                    <% } else { %>
                                                        <option value="<%= i %>">
                                                            <%= __('%s-й', i) %>
                                                        </option>
                                                    <% } %>
                                                <% } %>
                                            </select>
                                        </div>
                                        <div class="col-sm-7">
                                            <input type="text" name="config.index.ids.name"
                                                   value="<%= config.index.ids.name %>" class="form-control without">
                                        </div>
                                        <div class="col-sm-3">
                                            <select name="config.index.ids.count" class="form-control without">
                                                <% for (var i = 0; i <= 30; i++) { %>
                                                    <% if (config.index.ids.count === i) { %>
                                                        <% if (i === 0) { %>
                                                            <option value="<%= i %>" selected="selected">
                                                                <%= __('Не показывать') %>
                                                            </option>
                                                        <% } else { %>
                                                            <option value="<%= i %>" selected="selected">
                                                                <%- i %> <%= __('фильма(ов)') %>
                                                            </option>
                                                        <% } %>
                                                    <% } else { %>
                                                        <% if (i === 0) { %>
                                                            <option value="<%= i %>">
                                                                <%= __('Не показывать') %>
                                                            </option>
                                                        <% } else { %>
                                                            <option value="<%= i %>">
                                                                <%- i %> <%= __('фильма(ов)') %>
                                                            </option>
                                                        <% } %>
                                                    <% } %>
                                                <% } %>
                                            </select>
                                        </div>

                                        <div class="spacer-10"></div>

                                        <div class="col-sm-12">
                                            <div class="input-group">
                                                <input class="form-control" type="text"
                                                       placeholder="<%= __('ID или ссылка на фильм') %>"
                                                       data-add-id="config.index.ids.keys">
                                                <span class="input-group-btn">
                                                <a href="javascript:void(0)" class="btn btn-default"
                                                   data-add-name="config.index.ids.keys">
                                                    <span class="fa fa-plus"></span> <%= __('Добавить фильм') %>
                                                </a>
                                            </span>
                                            </div>

                                            <div class="spacer-10"></div>

                                            <div class="advanced-textarea">
                                                <div class="thumbs-list thumbs-small">
                                                    <ul data-add-name="config.index.ids.keys">
                                                        <% if (config.index.ids.keys) { %>
                                                            <% config.index.ids.keys.split(',').forEach(function (id) { %>
                                                                <li data-delete-id="<%- id %>" data-delete-name="config.index.ids.keys" style="display: none">
                                                                    <img class="media-object" data-src="/<%- config.urls.admin %>/poster?id=<%- id %>" alt="ID: <%- id %>" title="ID: <%- id %>">
                                                                </li>
                                                            <% }); %>
                                                        <% } %>
                                                    </ul>
                                                    <script>
                                                      var movies = document.querySelectorAll('.thumbs-list li');
                                                      movies.forEach(function(m, i) {
                                                        setTimeout(function() {
                                                          m.querySelector('img').src = m.querySelector('img').dataset.src;
                                                          setTimeout(function() {m.style.display = 'inline-block';}, i * 100);
                                                        }, i * 300);
                                                      });
                                                    </script>
                                                </div>
                                                <div style="display: none" id="index_ids">

                                                    <div class="spacer-10"></div>

                                                    <div class="text-muted">
                                                        <%= __('Фильмы:') %>
                                                    </div>

                                                    <div class="spacer-10"></div>

                                                    <textarea class="form-control input_ids"
                                                              name="config.index.ids.keys"
                                                              placeholder="<%= __('Список идентификаторов фильмов') %>"><%- config.index.ids.keys %></textarea>

                                                    <div class="spacer-10"></div>

                                                </div>
                                                <div class="advanced-textarea-footer">
                                                    <div class="pull-right">
                                                        <a href="javascript:void(0)"
                                                           onclick="document.querySelector('#index_ids').style.display = 'block'"
                                                           class="btn btn-default">
                                                            <%= __('Редактировать список ID') %>
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="spacer-10"></div>

                        <div class="col-sm-12">
                            <div class="cinema-box">
                                <div class="cinema-box-header">
                                    <div class="cinema-label">
                                        <i class="fa fa-bars"></i>&nbsp;&nbsp;&nbsp;<%- config.index.type.order %>.
