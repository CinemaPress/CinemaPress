                                        <div class="col-sm-6">
                                            <input type="text" name="config.index.year.keys"
                                                   value="<%= config.index.year.keys %>" class="form-control"
                                                   placeholder="<%= __('Например:') %> <%= __('2020') %>">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="spacer-10"></div>

                        <div class="col-sm-12">
                            <div class="cinema-box">
                                <div class="cinema-box-header">
                                    <div class="cinema-label">
                                        <i class="fa fa-bars"></i>&nbsp;&nbsp;&nbsp;<%- config.index.genre.order %>.
                                        <% if (config.index.genre.keys) { %><%= __('Жанры:') %> <%- config.index.genre.keys %>
                                        <% } else { %><%= __('Блок с жанрами пустой') %>
                                        <% } %>
