<head>

    <%- include('includes/head.ejs'); -%>

</head>
<body>
<div id="container" class="clearfix">

    <%- include('includes/left.ejs'); -%>

    <%- include('includes/right.ejs'); -%>

    <div id="main" class="clearfix">

        <%- include('includes/header-main.ejs'); -%>

        <div id="content" class="clearfix">

            <%- include('includes/header-sec.ejs'); -%>

            <div class="window">
                <div class="actionbar">
                    <div class="pull-left">
                        <a href="javascript:void(0)" class="btn" data-toggle-sidebar="left">
                            <i class="fa fa-chevron-left"></i>
                        </a>
                        <a href="/<%- config.urls.admin %>/display" class="btn">
                            <%= __('Параметры вывода фильмов в категориях') %>
                        </a>
                        <a href="https://CinemaPress.io/<%- config.language %>/admin/display.html" class="btn"
                           title="<%= __('Информация о параметрах вывода фильмов в категориях') %>" target="_blank">
                            <i class="fa fa-info-circle text-muted"></i>
                        </a>
                    </div>
                    <div class="pull-right">
                        <a href="javascript:void(0)" class="btn" data-toggle-sidebar="right">
                            <i class="fa fa-chevron-right"></i>
                        </a>
                    </div>
                </div>

                <div class="inner-padding">

                    <% if (config.sorting) { %>

                        <div class="row">
                            <div class="col-sm-12">
                                <div class="cinema-box">
                                    <div class="cinema-box-header">
                                        <div class="cinema-label">
                                            <i class="fa fa-newspaper"></i>&nbsp;&nbsp;&nbsp;<%= __('Параметры отображения в категориях') %>
                                        </div>
                                        <div class="cinema-label hidden-xs" style="float: right">
                                            <a href="https://CinemaPress.io/<%- config.language %>/admin/display.html"
                                               class="csstip"
                                               data-title="<%= __('Параметры отображения списка фильмов в категориях (жанры, страны, и т.д.)') %>"
                                               target="_blank">
                                                <i class="fa fa-info-circle"></i>
                                            </a>
                                        </div>
                                    </div>
                                    <div class="inner-padding">
                                        <div class="row">
                                            <div class="col-sm-12">
                                                <div>
                                                    <a href="javascript:void(0)" class="csstip text-muted"
                                                       data-title="<%= __('Укажите изображение, которое будет отображаться, когда люди будут делиться веб-сайтом в социальных сетях') %>">
                                                        <i class="fa fa-info-circle text-muted"></i>
                                                        <%= __('Изображение по умолчанию:') %>
                                                    </a>
                                                </div>
                                                <div class="row">
                                                    <div class="col-sm-1 text-center">
                                                        <a href="<% if (config.default.image) { %><%= config.default.image %><% } %>" target="_blank">
                                                            <img src="<% if (config.default.image) { %><%= config.default.image %><% } %>" class="img-responsive img-rounded" alt="Image" style="height: 30px; border: 1px solid #2f374b">
                                                        </a>
                                                    </div>
                                                    <div class="col-sm-9 text-center">
                                                        <input type="text" class="form-control"
                                                               name="config.default.image" data-content="input"
                                                               value="<% if (config.default.image) { %><%= config.default.image %><% } %>"
                                                               placeholder="<%= __('URL изображения') %>"
                                                               style="font-weight: normal; font-size: 14px;">
                                                    </div>
                                                    <div class="col-sm-2 text-center">
                                                        <label class="btn btn-default btn-block" for="contentFile">
                                                            <span class="fa fa-plus"></span>
                                                        </label>
                                                    </div>
                                                    <form id="contentForm" enctype="multipart/form-data"
                                                          data-form="content">
                                                        <input type="file" name="content" id="contentFile">
                                                    </form>
                                                </div>
                                            </div>

                                            <div class="spacer-10"></div>

                                            <div class="col-sm-12">
                                                <div>
                                                    <a href="javascript:void(0)" class="csstip text-muted"
                                                       data-title="<%= __('Укажите какое число фильмов будет отображаться в каждой категории и результатах поиска') %>">
                                                        <i class="fa fa-info-circle text-muted"></i>
                                                        <%= __('Фильмов на странице:') %>
                                                    </a>
                                                </div>
                                                <select name="config.default.count" class="form-control">
                                                    <% for (var i = 1; i <= 50; i++) { %>
                                                        <% if (config.default.count === i) { %>
                                                            <option value="<%= i %>" selected="selected">
                                                                <%- i %> <%= __('фильма(ов)') %>
                                                            </option>
                                                        <% } else { %>
                                                            <option value="<%= i %>">
                                                                <%- i %> <%= __('фильма(ов)') %>
                                                            </option>
                                                        <% } %>
                                                    <% } %>
                                                </select>
                                            </div>

                                            <div class="spacer-10"></div>

                                            <div class="col-sm-6">
                                                <div>
                                                    <a href="javascript:void(0)" class="csstip text-muted"
                                                       data-title="<%= __('Показывать фото актеров на странице фильма (перед этим нужно загрузить все фото)') %>">
                                                        <i class="fa fa-info-circle text-muted"></i>
                                                        <%= __('Фото актеров:') %>
                                                    </a>
                                                </div>
                                                <select name="config.default.people_image" class="form-control">
                                                    <% if (config.default.people_image) { %>
                                                        <option value="1" selected="selected">
                                                            <%= __('Показывать') %>
                                                        </option>
                                                        <option value="0">
                                                            <%= __('Не показывать') %>
                                                        </option>
                                                    <% } else { %>
                                                        <option value="1">
                                                            <%= __('Показывать') %>
                                                        </option>
                                                        <option value="0" selected="selected">
                                                            <%= __('Не показывать') %>
                                                        </option>
                                                    <% } %>
                                                </select>
                                            </div>

                                            <div class="col-sm-6">
                                                <div>
                                                    <a href="javascript:void(0)" class="csstip text-muted"
                                                       data-title="<%= __('Укажите доменное имя с которого будут показаны фото актеров') %>">
                                                        <i class="fa fa-info-circle text-muted"></i>
                                                        <%= __('Домен для фото актеров:') %>
                                                    </a>
                                                </div>
                                                <div class="row">
                                                    <div class="col-lg-12 col-xs-12 text-center">
                                                        <input type="text" class="form-control" name="config.default.people_image_domain" value="<% if (config.default.people_image_domain) { %><%= config.default.people_image_domain %><% } %>" placeholder="<%= __('Например:') %> https://cdn.<%- config.domain %>">
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="spacer-10"></div>

                                            <div class="col-sm-6">
                                                <div>
                                                    <a href="javascript:void(0)" class="csstip text-muted"
                                                       data-title="<%= __('Укажите сортировку по которой будут сортироваться фильмы в категориях') %>">
                                                        <i class="fa fa-info-circle text-muted"></i>
                                                        <%= __('Сортировка фильмов:') %>
                                                    </a>
                                                </div>
                                                <select name="config.default.sorting" class="form-control">
                                                    <% for (var name in config.sorting) { if (!config.sorting.hasOwnProperty(name)) continue; %>
                                                    <% if (config.default.sorting === name) { %>
                                                        <option value="<%= name %>" selected="selected">
                                                            <%- config.sorting[name] %>
                                                        </option>
                                                    <% } else { %>
                                                        <option value="<%= name %>">
                                                            <%- config.sorting[name] %>
                                                        </option>
                                                    <% } %>
                                                    <% } %>
                                                </select>
                                            </div>
                                            <div class="col-sm-6">
                                                <div>
                                                    <a href="javascript:void(0)" class="csstip text-muted"
                                                       data-title="<%= __('Укажите сортировку по которой будут сортироваться фильмы в поиске') %>">
                                                        <i class="fa fa-info-circle text-muted"></i>
                                                        <%= __('Сортировка фильмов в поиске:') %>
                                                    </a>
                                                </div>
                                                <select name="config.default.sorting_search" class="form-control">
                                                    <% if (config.default.sorting_search === "") { %>
                                                        <option value="" selected="selected">
                                                            <%= __('Нет') %>
                                                        </option>
                                                    <% } else { %>
                                                        <option value="">
                                                            <%= __('Нет') %>
                                                        </option>
                                                    <% } %>
                                                    <% for (var name in config.sorting) { if (!config.sorting.hasOwnProperty(name)) continue; %>
                                                        <% if (config.default.sorting_search === name) { %>
                                                            <option value="<%= name %>" selected="selected">
                                                                <%- config.sorting[name] %>
                                                            </option>
                                                        <% } else { %>
                                                            <option value="<%= name %>">
                                                                <%- config.sorting[name] %>
                                                            </option>
                                                        <% } %>
                                                    <% } %>
                                                </select>
                                            </div>

                                            <div class="spacer-10"></div>

                                            <div class="col-sm-6">
                                                <div>
                                                    <a href="javascript:void(0)" class="csstip text-muted"
                                                       data-title="<%= __('Укажите какое число страниц отображать внизу каждой категории и главной веб-сайта') %>">
                                                        <i class="fa fa-info-circle text-muted"></i>
                                                        <%= __('Количество чисел в пагинации:') %>
                                                    </a>
                                                </div>
                                                <select name="config.default.pages" class="form-control">
                                                    <% for (var i = 1; i <= 10; i++) { if (i % 2) continue; %>
                                                    <% if (config.default.pages === i) { %>
                                                        <option value="<%= i %>" selected="selected">
                                                            <%- i %> <%= __('номер(ов)') %>
                                                        </option>
                                                    <% } else { %>
                                                        <option value="<%= i %>">
                                                            <%- i %> <%= __('номер(ов)') %>
                                                        </option>
                                                    <% } %>
                                                    <% } %>
                                                </select>
                                            </div>
                                            <div class="col-sm-6">
                                                <div>
                                                    <a href="javascript:void(0)" class="csstip text-muted"
                                                       data-title="<%= __('Показывать кнопку последней страницы на главной и в категориях (может создавать нагрузку на сервер)') %>">
                                                        <i class="fa fa-info-circle text-muted"></i>
                                                        <%= __('Последняя страница:') %>
                                                    </a>
                                                </div>
                                                <select name="config.default.lastpage" class="form-control">
                                                    <% if (config.default.lastpage) { %>
                                                        <option value="1" selected="selected">
                                                            <%= __('Показывать') %>
                                                        </option>
                                                        <option value="0">
                                                            <%= __('Не показывать') %>
                                                        </option>
                                                    <% } else { %>
                                                        <option value="1">
                                                            <%= __('Показывать') %>
                                                        </option>
                                                        <option value="0" selected="selected">
                                                            <%= __('Не показывать') %>
                                                        </option>
                                                    <% } %>
                                                </select>
                                            </div>

                                            <div class="spacer-10"></div>

                                            <div class="col-sm-6">
                                                <div>
                                                    <a href="javascript:void(0)" class="csstip text-muted"
                                                       data-title="<%= __('Укажите конечную дату премьеры у фильмов, которые будут показаны при сортировке по дате премьеры или году') %>">
                                                        <i class="fa fa-info-circle text-muted"></i>
                                                        <%= __('Конечная дата:') %>
                                                    </a>
                                                </div>
                                                <select name="config.default.days" class="form-control">
                                                    <% for (var i = -35; i <= 728; i = i + 7) { %>
                                                        <% if (i === -35) { %>
                                                            <% if (config.default.days === i) { %>
                                                                <option value="<%= i %>" selected="selected">
                                                                    <%= __('Месяц назад') %>
                                                                </option>
                                                            <% } else { %>
                                                                <option value="<%= i %>">
                                                                    <%= __('Месяц назад') %>
                                                                </option>
                                                            <% } %>
                                                        <% } else if (i === -7) { %>
                                                            <% if (config.default.days === i) { %>
                                                                <option value="<%= i %>" selected="selected">
                                                                    <%= __('Неделю назад') %>
                                                                </option>
                                                            <% } else { %>
                                                                <option value="<%= i %>">
                                                                    <%= __('Неделю назад') %>
                                                                </option>
                                                            <% } %>
                                                        <% } else if (i === 0) { %>
                                                            <% if (config.default.days === i) { %>
                                                                <option value="<%= i %>" selected="selected">
                                                                    <%= __('Сегодня') %>
                                                                </option>
                                                            <% } else { %>
                                                                <option value="<%= i %>">
                                                                    <%= __('Сегодня') %>
                                                                </option>
                                                            <% } %>
                                                        <% } else if (i === 7) { %>
                                                            <% if (config.default.days === i) { %>
                                                                <option value="<%= i %>" selected="selected">
                                                                    <%= __('Через неделю') %>
                                                                </option>
                                                            <% } else { %>
                                                                <option value="<%= i %>">
                                                                    <%= __('Через неделю') %>
                                                                </option>
                                                            <% } %>
                                                        <% } else if (i === 35) { %>
                                                            <% if (config.default.days === i) { %>
                                                                <option value="<%= i %>" selected="selected">
                                                                    <%= __('Через месяц') %>
                                                                </option>
                                                            <% } else { %>
                                                                <option value="<%= i %>">
                                                                    <%= __('Через месяц') %>
                                                                </option>
                                                            <% } %>
                                                        <% } else if (i === 91) { %>
                                                            <% if (config.default.days === i) { %>
                                                                <option value="<%= i %>" selected="selected">
                                                                    <%= __('Через 3 месяца') %>
                                                                </option>
                                                            <% } else { %>
                                                                <option value="<%= i %>">
                                                                    <%= __('Через 3 месяца') %>
                                                                </option>
                                                            <% } %>
                                                        <% } else if (i === 182) { %>
                                                            <% if (config.default.days === i) { %>
                                                                <option value="<%= i %>" selected="selected">
                                                                    <%= __('Через пол года') %>
                                                                </option>
                                                            <% } else { %>
                                                                <option value="<%= i %>">
                                                                    <%= __('Через пол года') %>
                                                                </option>
                                                            <% } %>
                                                        <% } else if (i === 364) { %>
                                                            <% if (config.default.days === i) { %>
                                                                <option value="<%= i %>" selected="selected">
                                                                    <%= __('Через год') %>
                                                                </option>
                                                            <% } else { %>
                                                                <option value="<%= i %>">
                                                                    <%= __('Через год') %>
                                                                </option>
                                                            <% } %>
                                                        <% } else if (i === 364 * 2) { %>
                                                            <% if (config.default.days === i) { %>
                                                                <option value="<%= i %>" selected="selected">
                                                                    <%= __('Через 2 года') %>
                                                                </option>
                                                            <% } else { %>
                                                                <option value="<%= i %>">
                                                                    <%= __('Через 2 года') %>
                                                                </option>
                                                            <% } %>
                                                        <% } %>
                                                    <% } %>
                                                </select>
                                            </div>

                                            <div class="col-sm-6">
                                                <div>
                                                    <a href="https://momentjs.com/docs/#/displaying/format/"
                                                       class="csstip text-muted"
                                                       data-title="<%= __('В таком формате будет показана дата на веб-сайте') %>">
                                                        <i class="fa fa-info-circle text-muted"></i>
                                                        <%= __('Формат даты:') %>
                                                    </a>
                                                </div>
                                                <div class="row">
                                                    <div class="col-lg-12 col-xs-12 text-center">
                                                        <input type="text" class="form-control"
                                                               name="config.default.moment"
                                                               value="<% if (config.default.moment) { %><%= config.default.moment %><% } %>"
                                                               placeholder="<%= __('Например:') %> <%= __('YYYY-MM-DD') %>">
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="spacer-10"></div>

                                            <div class="col-sm-6">
                                                <div>
                                                    <a href="javascript:void(0)" class="csstip text-muted"
                                                       data-title="<%= __('Укажите какое число фильмов будет отображаться в каждой категории карты сайта') %>">
                                                        <i class="fa fa-info-circle text-muted"></i>
                                                        <%= __('Фильмов в карте сайта:') %>
                                                    </a>
                                                </div>
                                                <select name="config.default.loc" class="form-control">
                                                    <% for (var i = 0; i <= 3000; i = i + 100) { if (!i) continue; %>
                                                    <% if (config.default.loc === i) { %>
                                                        <option value="<%= i %>" selected="selected">
                                                            <%- i %> <%= __('фильма(ов)') %>
                                                        </option>
                                                    <% } else { %>
                                                        <option value="<%= i %>">
                                                            <%- i %> <%= __('фильма(ов)') %>
                                                        </option>
                                                    <% } %>
                                                    <% } %>
                                                </select>
                                            </div>

                                            <div class="col-sm-6">
                                                <div>
                                                    <a href="javascript:void(0)" class="csstip text-muted"
                                                       data-title="<%= __('Укажите какое число фильмов будет использоваться для формирования страницы всех актеров, режиссеров, жанров, годов и стран') %>">
                                                        <i class="fa fa-info-circle text-muted"></i>
                                                        <%= __('Фильмов в общих страницах:') %>
                                                    </a>
                                                </div>
                                                <select name="config.default.tag" class="form-control">
                                                    <% for (var i = 0; i <= 3000; i = i + 100) { if (!i) continue; %>
                                                    <% if (config.default.tag === i) { %>
                                                        <option value="<%= i %>" selected="selected">
                                                            <%- i %> <%= __('фильма(ов)') %>
                                                        </option>
                                                    <% } else { %>
                                                        <option value="<%= i %>">
                                                            <%- i %> <%= __('фильма(ов)') %>
                                                        </option>
                                                    <% } %>
                                                    <% } %>
                                                </select>
                                            </div>

                                            <div class="spacer-10"></div>

                                            <div class="col-sm-6">
                                                <div>
                                                    <a href="javascript:void(0)" class="csstip text-muted"
                                                       data-title="<%= __('В таком формате будут показаны теги на странице фильма') %>">
                                                        <i class="fa fa-info-circle text-muted"></i>
                                                        <%= __('Формат тегов:') %>
                                                    </a>
                                                </div>
                                                <div class="row">
                                                    <div class="col-lg-12 col-xs-12 text-center">
                                                        <input type="text" class="form-control"
                                                               name="config.default.tags.format"
                                                               value="<% if (config.default.tags.format) { %><%= config.default.tags.format %><% } %>"
                                                               placeholder="[Type] [year] [genre] [country]">
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="col-sm-6">
                                                <div>
                                                    <a href="javascript:void(0)" class="csstip text-muted"
                                                       data-title="<%= __('Укажите какие категории будут использоваться для составления тегов') %>">
                                                        <i class="fa fa-info-circle text-muted"></i>
                                                        <%= __('Категории тегов:') %>
                                                    </a>
                                                </div>
                                                <div class="inline-labels text-center">
                                                    <label>
                                                        <input name="config.default.tags.list" value="year"
                                                               type="checkbox"
                                                        <% if (config.default.tags.list.indexOf('year') + 1) { %>
                                                               checked=""
                                                                <% } %>
                                                        ><span></span> <%= __('год') %>
                                                    </label>
                                                    <label>
                                                        <input name="config.default.tags.list" value="genre"
                                                               type="checkbox"
                                                        <% if (config.default.tags.list.indexOf('genre') + 1) { %>
                                                               checked=""
                                                                <% } %>
                                                        ><span></span> <%= __('жанр') %>
                                                    </label>
                                                    <label>
                                                        <input name="config.default.tags.list" value="country"
                                                               type="checkbox"
                                                        <% if (config.default.tags.list.indexOf('country') + 1) { %>
                                                               checked=""
                                                                <% } %>
                                                        ><span></span> <%= __('страна') %>
                                                    </label>
                                                </div>
                                            </div>

                                            <div class="spacer-10"></div>

                                            <div class="col-xs-12">
                                                <div class="row">
                                                    <div class="col-sm-12">
                                                        <div class="cinema-box">
                                                            <div class="cinema-box-header">
                                                                <div class="cinema-label">
                                                                    <i class="fa fa-newspaper"></i>&nbsp;&nbsp;&nbsp;<%= __('Сортировка по рейтингу KinoPoisk / IMDb') %>
                                                                </div>
                                                                <div class="cinema-label hidden-xs"
                                                                     style="float: right">
                                                                    <a href="https://CinemaPress.io/<%- config.language %>/admin/display.html"
                                                                       class="csstip"
                                                                       data-title="<%= __('Параметры отображения списка фильмов при сортировке по рейтингу KinoPoisk / IMDb') %>"
                                                                       target="_blank">
                                                                        <i class="fa fa-info-circle"></i>
                                                                    </a>
                                                                </div>
                                                            </div>
                                                            <div class="inner-padding">
                                                                <div class="row">
                                                                    <div class="col-sm-6">
                                                                        <div>
                                                                            <a href="javascript:void(0)"
                                                                               class="csstip text-muted"
                                                                               data-title="<%= __('Укажите минимальное число голосов KinoPoisk у фильмов, которые будут показаны при сортировке по рейтингу KinoPoisk') %>">
                                                                                <i class="fa fa-info-circle text-muted"></i>
                                                                                <%= __('Число голосов KinoPoisk:') %>
                                                                            </a>
                                                                        </div>
                                                                        <select name="config.default.votes.imdb"
