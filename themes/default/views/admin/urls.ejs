                                                           value="<%= config.urls.movies.download %>"
                                                           placeholder="<%= __('URL для активации веб-страницы') %> <%= __('«Скачать»') %>"
                                                           type="text">
                                                </div>

                                                <div class="spacer-10"></div>

                                                <div class="input-group">
                                                    <span class="input-group-addon text-muted"><span
