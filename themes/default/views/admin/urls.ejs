                           title="<%= __('Информация о параметрах изменения URL различных страниц веб-сайта') %>"
                           target="_blank">
                            <i class="fa fa-info-circle text-muted"></i>
                        </a>
                    </div>
                    <div class="pull-right">
                        <a href="javascript:void(0)" class="btn" data-toggle-sidebar="right">
                            <i class="fa fa-chevron-right"></i>
                        </a>
                    </div>
                </div>

                <div class="inner-padding">

                    <% if (config.urls) { %>

                        <div class="row">
                            <div class="col-sm-12">
                                <div class="cinema-box">
                                    <div class="cinema-box-header">
                                        <div class="cinema-label">
                                            <i class="fa fa-link"></i>&nbsp;&nbsp;&nbsp;<%= __('Панель администратора') %>
                                        </div>
                                    </div>
                                    <div class="inner-padding" style="padding-top: 0;">
                                        <div class="row">
                                            <div class="col-lg-12 col-xs-12 text-center">
                                                <div class="secret-modal">
                                                    <div class="alert"><img
                                                                src="/themes/default/public/admin/images/logo.svg"
